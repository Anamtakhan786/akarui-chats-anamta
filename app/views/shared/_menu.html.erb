<style>
  .hamburger {
  position: fixed;
  z-index: 101;
  padding: 15px;
  left: -1px;
  top: 0; 
  background: white;
  border: 1px solid #ddd;
  border-left: 1px solid transparent;
  border-top: 1px solid transparent
}

.hamburger:hover { cursor: pointer; }

.hamburger div {
  background-color: #52c0f7 ;
  border-radius: 1px;
  height: 6px;
  width: 30px;
}

.hamburger div:not(:last-child) { margin-bottom: 5px;}

nav {
  background-color: white;
  display: inline-block;
  position: fixed;
  height: 100vh;
  padding: 2rem;
  top: 0;
  width: 225px;
  text-align: left;
  border-right: 1px solid #ddd;
  left: -225px;
  z-index: 100;
  -webkit-transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
}
nav a:visited {
  color: #52c0f7;
}

nav a {
  display: block;
  text-decoration: none;
  text-align: left;
  color: #52c0f7;
  padding: 5px 0px;
  font-weight: bolder;


}

nav a:hover { background-color: #f5f5f5; }

nav a:visited { color: #4F97D7; }

nav a.active {
  background-color: black;
  color: white;
}

nav, .hamburger, .cover {
  -webkit-transition: -webkit-transform .3s;
  transition: transform .3s;
}

.sidenav-active nav, .sidenav-active .hamburger, .sidenav-active .cover {
  -webkit-transform: translateX(225px);
  -ms-transform: translateX(225px);
  transform: translateX(225px);
}


</style>

<div>
  <% if user_signed_in?%>
<button class="fab" onclick="show_users()" >+</button>
 <%end%>
<div class="hamburger" id="hamburger" onclick="toggleSidenav();">
  <div></div>
  <div></div>
  <div></div>
 </div>
 <nav>
  <div class="links">
   <% if user_signed_in?%>
        <!--<%= gravatar_for @current_user %>-->
        <% if current_user.present? %>
      <%= image_tag current_user.avatar.url,height: "50px" ,width: "50px" %>
         <% end %>
        <h3><%= current_user.name %></h3>

  <%= link_to 'All Users', users_path %>
  <%= link_to 'Setting', edit_user_registration_path%>
  <%= link_to 'Recent Chats', authenticated_root_path %>
  <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
  <%else%>
  <%= link_to 'Sign Up', new_user_registration_path %>
  <%= link_to 'Log In', new_user_session_path %>
  <% end %>
  
  </div>
</nav>
 <script type="text/javascript">
    function toggleSidenav() {
      document.body.classList.toggle('sidenav-active');
     }
     function show_users() {
      document.getElementsByClassName('side-user-list')[0].classList.toggle('side-user-list-show')
     }
  </script>
</div>